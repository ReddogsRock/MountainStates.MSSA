@using MountainStates.MSSA.Module.MSSA_Entries.Models
@using MountainStates.MSSA.Module.MSSA_Events.Services
@using MountainStates.MSSA.Module.MSSA_Events.Models
@using Oqtane.Modules.Controls

@namespace MountainStates.MSSA.Module.MSSA_Events
@inherits ModuleBase
@inject IMSSA_EventService EventService
@inject NavigationManager NavigationManager

@if (evt == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col">
                <h2>@evt.EventName</h2>
                <p class="text-muted">@evt.EventIdentifier</p>
            </div>
            <div class="col-auto">
                <ActionLink Action="Index" Text="Back to List" ResourceKey="BackToList" Class="btn btn-secondary me-2" />
                @if (UserSecurity.IsAuthorized(PageState.User, RoleNames.Admin))
                {
                    <ActionLink Action="Edit" Parameters="@($"id={evt.EventId}")"
                                Security="SecurityAccessLevel.Edit" Text="Edit"
                                ResourceKey="EditEvent" Class="btn btn-primary" />
                }
            </div>
        </div>

        @* Event Information *@
        <div class="card mb-3">
            <div class="card-header">
                <h4>Event Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Dates:</dt>
                            <dd class="col-sm-8">@evt.DateRange</dd>

                            <dt class="col-sm-4">Location:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(evt.City))
                                {
                                    <text>@evt.City, @evt.StateCode</text>
                                }
                                else
                                {
                                    <em>Not specified</em>
                                }
                            </dd>

                            <dt class="col-sm-4">Point Year:</dt>
                            <dd class="col-sm-8">@(evt.PointYear?.ToString() ?? "N/A")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Chairman:</dt>
                            <dd class="col-sm-8">@(evt.ChairmanName ?? "Not specified")</dd>

                            <dt class="col-sm-4">Chairman Phone:</dt>
                            <dd class="col-sm-8">@(evt.ChairmanPhone ?? "Not provided")</dd>

                            <dt class="col-sm-4">MSSA Sanctioned:</dt>
                            <dd class="col-sm-8">
                                @if (evt.IsMSSASanctioned)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @* Planning Information *@
        <div class="card mb-3">
            <div class="card-header">
                <h4>Planning Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>Stock:</strong>
                        <ul class="list-unstyled">
                            @if (evt.Cattle)
                            {
                                <li>✓ Cattle</li>
                            }
                            @if (evt.Sheep)
                            {
                                <li>✓ Sheep</li>
                            }
                            @if (!evt.Cattle && !evt.Sheep)
                            {
                                <li class="text-muted">None specified</li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <strong>Venue:</strong>
                        <ul class="list-unstyled">
                            @if (evt.Arena)
                            {
                                <li>✓ Arena</li>
                            }
                            @if (evt.Field)
                            {
                                <li>✓ Field</li>
                            }
                            @if (!evt.Arena && !evt.Field)
                            {
                                <li class="text-muted">None specified</li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <strong>Style:</strong>
                        <ul class="list-unstyled">
                            @if (evt.OnFoot)
                            {
                                <li>✓ On Foot</li>
                            }
                            @if (evt.Horseback)
                            {
                                <li>✓ Horseback</li>
                            }
                            @if (!evt.OnFoot && !evt.Horseback)
                            {
                                <li class="text-muted">None specified</li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <strong>Classes:</strong>
                        <ul class="list-unstyled">
                            @if (evt.Open)
                            {
                                <li>✓ Open</li>
                            }
                            @if (evt.Nursery)
                            {
                                <li>✓ Nursery</li>
                            }
                            @if (evt.Intermediate)
                            {
                                <li>✓ Intermediate</li>
                            }
                            @if (evt.Novice)
                            {
                                <li>✓ Novice</li>
                            }
                            @if (evt.Junior)
                            {
                                <li>✓ Junior</li>
                            }
                            @if (!evt.Open && !evt.Nursery && !evt.Intermediate && !evt.Novice && !evt.Junior)
                            {
                                <li class="text-muted">None specified</li>
                            }
                        </ul>
                    </div>
                </div>
                @if (evt.NumberOfRuns.HasValue)
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <strong>Number of Runs:</strong> @evt.NumberOfRuns
                        </div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(evt.Notes))
                {
                    <div class="row mt-2">
                        <div class="col-12">
                            <strong>Notes:</strong>
                            <p>@evt.Notes</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        @* Administrative Information *@
        <div class="card mb-3">
            <div class="card-header">
                <h4>Administrative Information</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Results Received:</dt>
                    <dd class="col-sm-9">@(evt.ResultsReceivedDate?.ToString("MMM dd, yyyy") ?? "Not received")</dd>

                    <dt class="col-sm-3">Results Uploaded:</dt>
                    <dd class="col-sm-9">
                        @if (evt.ResultsUploaded)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Sanction Fee:</dt>
                    <dd class="col-sm-9">@(evt.SanctionFee?.ToString("C") ?? "N/A")</dd>

                    <dt class="col-sm-3">Fee Received:</dt>
                    <dd class="col-sm-9">@(evt.FeeReceivedDate?.ToString("MMM dd, yyyy") ?? "Not received")</dd>
                </dl>
            </div>
        </div>

        @* Trials with Expandable Entries *@
        <div class="card">
            <div class="card-header">
                <h4>Trials (@evt.TrialCount)</h4>
            </div>
            <div class="card-body">
                @if (trials == null)
                {
                    <p><em>Loading trials...</em></p>
                }
                else if (!trials.Any())
                {
                    <p><em>No trials scheduled for this event.</em></p>
                }
                else
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Trial Name</th>
                                <th>Identifier</th>
                                <th>Stock</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trial in trials)
                            {
                                <tr>
                                    <td>@trial.TrialDate.ToString("MMM dd, yyyy")</td>
                                    <td>@trial.TrialName</td>
                                    <td><small class="text-muted">@trial.TrialIdentifier</small></td>
                                    <td>@trial.Stock</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary" @onclick="() => ToggleTrialEntries(trial.TrialId)">
                                            @(_expandedTrialId == trial.TrialId ? "Hide" : "View")
                                        </button>
                                    </td>
                                </tr>
                                
                                @* Expandable Entries Section *@
                                @if (_expandedTrialId == trial.TrialId)
                                {
                                    <tr>
                                        <td colspan="5" class="p-0">
                                            <div class="trial-entries-section p-3 bg-light">
                                                @if (_loadingEntries)
                                                {
                                                    <p><em>Loading entries...</em></p>
                                                }
                                                else if (_currentTrialEntries != null)
                                                {
                                                    @* Class Filter *@
                                                    <div class="row mb-3">
                                                        <div class="col-md-4">
                                                            <label for="classFilter" class="form-label fw-bold">Filter by Class:</label>
                                                            <select id="classFilter" class="form-select form-select-sm" 
                                                                    @bind="_selectedClass" @bind:after="ApplyFilter">
                                                                <option value="">All Classes</option>
                                                                @foreach (var className in _availableClasses)
                                                                {
                                                                    <option value="@className">@className</option>
                                                                }
                                                            </select>
                                                        </div>
                                                        <div class="col-md-8 d-flex align-items-end">
                                                            <small class="text-muted">
                                                                Showing @_filteredEntries?.Count of @_currentTrialEntries?.Count entries
                                                            </small>
                                                        </div>
                                                    </div>

                                                    @* Entries Table *@
                                                    @if (_filteredEntries != null && _filteredEntries.Any())
                                                    {
                                                        <div class="table-responsive">
                                                            <table class="table table-striped table-bordered table-sm">
                                                                <thead class="table-dark">
                                                                    <tr>
                                                                        <th>Class</th>
                                                                        <th>Placing</th>
                                                                        <th>Dog Name</th>
                                                                        <th>Handler Name</th>
                                                                        <th>Run Time</th>
                                                                        <th>Tiebreaker</th>
                                                                        <th>Obstacles</th>
                                                                        <th>Points</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var entry in _filteredEntries)
                                                                    {
                                                                        <tr>
                                                                            <td>
                                                                                @entry.ClassName
                                                                                @if (!string.IsNullOrEmpty(entry.SubClassName))
                                                                                {
                                                                                    <br /><small class="text-muted">@entry.SubClassName</small>
                                                                                }
                                                                            </td>
                                                                            <td class="text-center">
                                                                                @if (entry.Placing.HasValue)
                                                                                {
                                                                                    <span class="@GetPlacingBadgeClass(entry.Placing.Value)">
                                                                                        @entry.Placing.Value
                                                                                    </span>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <span class="text-muted">-</span>
                                                                                }
                                                                            </td>
                                                                            <td>@entry.DogName</td>
                                                                            <td>@entry.HandlerName</td>
                                                                            <td class="text-end">@FormatTime(entry.RunTime)</td>
                                                                            <td class="text-end">@FormatTime(entry.TieBreakerTime)</td>
                                                                            <td class="text-end">@(entry.SumOfObstacles?.ToString("F1") ?? "-")</td>
                                                                            <td class="text-end">@(entry.TrialPoints?.ToString() ?? "-")</td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-muted">No entries found for this trial.</p>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
}

<style>
    .trial-entries-section {
        border-left: 3px solid #0d6efd;
    }

    .placing-badge {
        display: inline-block;
        min-width: 2rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-weight: 600;
    }
</style>

@code {
    private MSSA_Event evt;
    private List<MSSA_Trial> trials;
    
    // Entry expansion state
    private int? _expandedTrialId = null;
    private List<EntryListItem> _currentTrialEntries;
    private List<EntryListItem> _filteredEntries;
    private List<string> _availableClasses = new();
    private string _selectedClass = "";
    private bool _loadingEntries = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            int eventId = int.Parse(PageState.QueryString["id"]);
            evt = await EventService.GetEventAsync(eventId, ModuleState.ModuleId);
            trials = await EventService.GetEventTrialsAsync(eventId, ModuleState.ModuleId);
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error loading event details");
            AddModuleMessage("Error loading event details", MessageType.Error);
        }
    }

    private async Task ToggleTrialEntries(int trialId)
    {
        if (_expandedTrialId == trialId)
        {
            // Collapse if clicking same trial
            _expandedTrialId = null;
            _currentTrialEntries = null;
            _filteredEntries = null;
            _availableClasses.Clear();
            _selectedClass = "";
        }
        else
        {
            // Expand and load entries
            _expandedTrialId = trialId;
            _loadingEntries = true;
            _selectedClass = "";
            
            try
            {
                _currentTrialEntries = await EventService.GetTrialEntriesAsync(trialId, ModuleState.ModuleId);
                
                // Get unique classes
                _availableClasses = _currentTrialEntries
                    .Select(e => e.ClassName)
                    .Distinct()
                    .OrderBy(c => c)
                    .ToList();
                
                // Sort entries by Class, then Placing (complete first), then other fields
                ApplyFilter();
            }
            catch (Exception ex)
            {
                await logger.LogError(ex, "Error loading trial entries");
                AddModuleMessage("Error loading trial entries", MessageType.Error);
            }
            finally
            {
                _loadingEntries = false;
            }
        }
    }

    private void ApplyFilter()
    {
        IEnumerable<EntryListItem> filtered;
        
        if (string.IsNullOrEmpty(_selectedClass))
        {
            filtered = _currentTrialEntries;
        }
        else
        {
            filtered = _currentTrialEntries.Where(e => e.ClassName == _selectedClass);
        }

        // Sort: Class, then Placing (nulls last), then Dog Name
        _filteredEntries = filtered
            .OrderBy(e => e.ClassName)
            .ThenBy(e => e.Placing.HasValue ? 0 : 1)  // Complete entries first
            .ThenBy(e => e.Placing ?? int.MaxValue)
            .ThenBy(e => e.DogName)
            .ToList();
    }

    private string FormatTime(TimeSpan? time)
    {
        if (!time.HasValue) return "-";

        // Assuming data was entered wrong: hours=minutes, minutes=seconds
        int minutes = time.Value.Hours;  // What's in hours field is actually minutes
        int seconds = time.Value.Minutes; // What's in minutes field is actually seconds

        if (minutes > 0)
        {
            return $"{minutes}:{seconds:D2}";  // Shows as "3:51"
        }
        else
        {
            return $"{seconds}";  // Shows as "51"
        }
    }

    private string GetPlacingBadgeClass(int placing)
    {
        return placing switch
        {
            1 => "badge bg-warning text-dark placing-badge",
            2 => "badge bg-secondary text-dark placing-badge",
            3 => "badge bg-danger placing-badge",
            _ => "badge bg-primary placing-badge"
        };
    }
}
