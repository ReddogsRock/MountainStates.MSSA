@using MountainStates.MSSA.Module.TopDogs.Services
@using MountainStates.MSSA.Module.TopDogs.Models
@namespace MountainStates.MSSA.Module.TopDogs
@inherits ModuleBase
@inject ITopDogsService TopDogsService
@inject ISettingService SettingService

<div class="top-dogs-module">

@if (_topDogs == null)
{
    <p><em>Loading...</em></p>
}
else if (!_topDogs.Any())
{
    <div class="alert alert-info">
        <p>No results found. Please configure the module settings.</p>
    </div>
}

else
{
    <div class="top-dogs-list">
        <h3>20@_year @GetLevelName(_level) @_species</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Name</th>
                    <th>Handler</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rank = 1;
                }
                @foreach (var dog in _topDogs)
                {
                    <tr>
                        <td>@rank</td>
                        <td>@dog.Name</td>
                        <td>@(dog.OwnerName ?? dog.Handler)</td>
                        <td>@dog.Points</td>
                    </tr>
                    rank++;
                }
            </tbody>
        </table>
    </div>
   
}
 </div>

@code {
    private List<TopDog> _topDogs;
    private int _year;
    private int _level;
    private string _species;
    private int _quantity;

    public override SecurityAccessLevel SecurityAccessLevel => SecurityAccessLevel.View;

    protected override async Task OnParametersSetAsync()
    {
        try
        {
            var settings = await SettingService.GetModuleSettingsAsync(ModuleState.ModuleId);

            string defaultYear = (DateTime.Now.Year % 100).ToString();
            string yearSetting = SettingService.GetSetting(settings, "Year", defaultYear);
            string levelSetting = SettingService.GetSetting(settings, "Level", "5");
            string quantitySetting = SettingService.GetSetting(settings, "Quantity", "10");

            _year = int.TryParse(yearSetting, out int year) ? year : int.Parse(defaultYear);
            _level = int.TryParse(levelSetting, out int level) ? level : 5;
            _quantity = int.TryParse(quantitySetting, out int quantity) ? quantity : 10;
            _species = SettingService.GetSetting(settings, "Species", "");

            if (!string.IsNullOrEmpty(_species) && _level > 0)
            {
                _topDogs = await TopDogsService.GetTopDogsAsync(_year, _level, _species, _quantity);
            }
            else
            {
                _topDogs = new List<TopDog>();
            }
        }
        catch (Exception ex)
        {
            await logger.LogError(ex, "Error loading top dogs");
            _topDogs = new List<TopDog>();
        }
    }

    private string GetLevelName(int level)
    {
        return level switch
        {
            5 => "Open",
            6 => "Nursery",
            7 => "Intermediate",
            8 => "Novice",
            _ => ""
        };
    }

    private string CalculateAge(DateTime dateOfBirth)
    {
        var age = DateTime.Now.Year - dateOfBirth.Year;
        if (DateTime.Now < dateOfBirth.AddYears(age)) age--;
        return age.ToString();
    }
}